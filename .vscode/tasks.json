      }
    },

    // ==================== DEPLOY ====================
    {
      "label": "Deploy: Functions",
      "type": "shell",
      "command": "firebase deploy --only functions --project gosenderr-6773f",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Deploy: Senderrplace Hosting",
      "type": "shell",
      "command": "pnpm run deploy:marketplace",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Deploy: Senderr Web Hosting",
      "type": "shell",
      "command": "pnpm run deploy:senderr",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Deploy: Admin Hosting",
      "type": "shell",
      "command": "pnpm run deploy:admin",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },

    // ==================== STOP ====================
    {
      "label": "Stop: Admin Desktop (Phase 1)",
      "type": "shell",
      "command": "pnpm run stop:admin-desktop",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Stop: Metro (8081)",
      "type": "shell",
      "command": "pkill -f 'react-native.*start' 2>/dev/null || true; lsof -ti:8081 2>/dev/null | xargs kill -9 2>/dev/null || true; echo 'Metro stopped'",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Stop: Common Dev Ports",
      "type": "shell",
      "command": "pids=$(lsof -ti:3000,4000,5001,5173,5174,5176,5180,8080,9099,9199 2>/dev/null); if [ -n \"$pids\" ]; then echo \"$pids\" | xargs kill -9; fi; pkill -f 'electron|Electron' 2>/dev/null || true; echo 'Common dev ports cleared'",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
