{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ios-metro",
      "type": "shell",
      "command": "pnpm --filter v1-senderr-ios start",
      "options": {
        "cwd": "${workspaceFolder}/apps/V1-senderr-ios"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*(Welcome to Metro|Starting Metro).*",
          "endsPattern": ".*(waiting on|Metro waiting|ready).*"
        }
      },
      "isBackground": true
    },
    {
      "label": "ios-open-xcode",
      "type": "shell",
      "command": "open -a Xcode apps/V1-senderr-ios/ios/Senderrappios.xcworkspace",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "ios-pods-install",
      "type": "shell",
      "command": "pod install",
      "options": {
        "cwd": "${workspaceFolder}/apps/V1-senderr-ios/ios"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "pnpm lint",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "shell",
      "command": "pnpm build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "dev",
      "type": "shell",
      "command": "pnpm dev",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "ios-profile",
      "dependsOn": [
        "ios-open-xcode",
        "ios-metro"
      ],
      "dependsOrder": "parallel",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
