    {
      "label": "Test: Admin App",
      "type": "shell",
      "command": "pnpm --prefix apps/admin-app run test -- --run --reporter verbose",
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // ==================== BUILD ====================
    {
      "label": "Build: Repo",
      "type": "shell",
      "command": "pnpm build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build: Senderrplace",
      "type": "shell",
      "command": "pnpm run build:marketplace",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
