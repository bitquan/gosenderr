    {
      "label": "Build: Admin Web",
      "type": "shell",
      "command": "pnpm run build:admin",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build: Admin Desktop",
      "type": "shell",
      "command": "pnpm --filter @gosenderr/admin-desktop build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build: iOS Verify",
      "type": "shell",
      "command": "pnpm run ios:build:verify",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
