rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    function uid() {
      return request.auth.uid;
    }

    function jobExists(jobId) {
      return exists(/databases/(default)/documents/jobs/$(jobId));
    }

    function getJobData(jobId) {
      return get(/databases/(default)/documents/jobs/$(jobId)).data;
    }

    function isJobCreator(jobId) {
      return isSignedIn() && jobExists(jobId) && getJobData(jobId).createdByUid == uid();
    }

    function isAssignedCourier(jobId) {
      return isSignedIn() && jobExists(jobId) && getJobData(jobId).courierUid == uid();
    }

    function isJobOpen(jobId) {
      return jobExists(jobId) && getJobData(jobId).status == 'open';
    }

    function isValidImage() {
      return request.resource.contentType.matches('image/(jpeg|png|webp)')
        && request.resource.size < 10 * 1024 * 1024;  // 10MB max
    }

    // Temporary job photos: jobs/{tempId}/photos/{photoFile}
    // tempId will be in format temp_1234567890_abc123
    match /jobs/{tempId}/photos/{photoFile} {
      // If tempId starts with "temp_", allow authenticated users to upload
      allow write: if isSignedIn() && isValidImage() && tempId.matches('temp_.*');
      
      // Allow authenticated users to read temp uploads
      allow read: if isSignedIn() && tempId.matches('temp_.*');
      
      // For actual job IDs (not starting with temp_), use job creator rules
      allow write: if isSignedIn() && isJobCreator(tempId) && isValidImage() && !tempId.matches('temp_.*');

      // Read: job creator, assigned courier, or any signed-in courier while job is open
      allow read: if isSignedIn() && !tempId.matches('temp_.*') && (
        isJobCreator(tempId)
        || isAssignedCourier(tempId)
        || isJobOpen(tempId)
      );
    }

    // Marketplace item photos: marketplace/{userId}/{photoFile}
    match /marketplace/{userId}/{photoFile} {
      // User can upload their own marketplace photos
      allow write: if isSignedIn() && uid() == userId && isValidImage();
      
      // Anyone can read marketplace photos (public marketplace)
      allow read: if true;
    }

    // Profile photos: profilePhotos/{userId}/{photoFile}
    match /profilePhotos/{userId}/{photoFile} {
      // User can upload their own profile photo
      allow write: if isSignedIn() && uid() == userId && isValidImage();

      // Profile photos are public (used across marketplace and courier views)
      allow read: if true;
    }

    // Legacy path support: items/{userId}/{photoFile}
    match /items/{userId}/{photoFile} {
      // User can upload their own item photos
      allow write: if isSignedIn() && uid() == userId && isValidImage();
      
      // Anyone can read item photos (public marketplace)
      allow read: if true;
    }

    // Insurance documents: insurance/{userId}/{documentFile}
    match /insurance/{userId}/{documentFile} {
      // User can upload their own insurance documents
      allow write: if isSignedIn() && uid() == userId && isValidImage();
      
      // User can read their own insurance documents
      // Admins can read any insurance documents (check via Firestore)
      allow read: if isSignedIn() && (
        uid() == userId
        || get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
