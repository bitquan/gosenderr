{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@gosenderr/shared": ["../../packages/shared/src"]
    },
    "types": ["vite/client", "vitest/globals", "react", "react-dom", "react/jsx-runtime", "@testing-library/jest-dom"]
  },
  "include": ["src"],
  "exclude": ["src/**/__tests__", "src/**/*.spec.tsx", "src/**/*.test.tsx", "src/tests/**"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
