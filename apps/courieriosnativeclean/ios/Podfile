# Resolve react_native_pods.rb robustly to handle pnpm hoisting and various checkouts
# Walk up parent directories from the ios dir and look for node_modules/react-native/scripts/react_native_pods.rb
require Pod::Executable.execute_command('node', ['-p',
  '(function(){ const fs=require("fs"), path=require("path"); let dir=process.argv[1];
      while(true){ const p=path.join(dir, "node_modules", "react-native", "scripts", "react_native_pods.rb"); if(fs.existsSync(p)){ return p; } const parent=path.dirname(dir); if(parent===dir) break; dir=parent; }
      // Last effort: rely on Node module resolution (may succeed in some layouts)
      try{ return require.resolve("react-native/scripts/react_native_pods.rb"); }catch(e){}
      throw new Error("react-native/scripts/react_native_pods.rb not found");
  })()', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

use_modular_headers!

target 'courieriosnativeclean' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # Add Firebase pods
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'

  target 'courieriosnativecleanTests' do
    inherit! :complete
    # Pods for testing
  end

  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    # Ensure BoringSSL headers are reachable via include <openssl/...>
    installer.pods_project.targets.each do |target|
      if target.name == 'BoringSSL-GRPC'
        target.build_configurations.each do |config|
          config.build_settings['HEADER_SEARCH_PATHS'] ||= ['$(inherited)']
          config.build_settings['HEADER_SEARCH_PATHS'] << "${PODS_ROOT}/BoringSSL-GRPC/src/include"
          # Also include the openssl subdir so headers like <boringssl_prefix_symbols.h> resolve
          config.build_settings['HEADER_SEARCH_PATHS'] << "${PODS_ROOT}/BoringSSL-GRPC/src/include/openssl"
        end
      end
    end
  end
end
