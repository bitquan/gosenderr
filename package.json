{
  "name": "gosenderr-monorepo",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:customer": "pnpm --filter @gosenderr/marketplace-app dev",
    "build:customer": "pnpm --filter @gosenderr/marketplace-app build",
    "preview:customer": "pnpm --filter @gosenderr/marketplace-app preview",
    "deploy:customer": "pnpm build:customer && firebase deploy --only hosting:gosenderr-6773f --project gosenderr-6773f --non-interactive",
    "dev:courier": "pnpm --filter @gosenderr/courier-app dev",
    "build:courier": "pnpm --filter @gosenderr/courier-app build",
    "preview:courier": "pnpm --filter @gosenderr/courier-app preview",
    "deploy:courier": "pnpm build:courier && firebase deploy --only hosting:gosenderr-courier --project gosenderr-6773f --non-interactive",
    "dev:admin": "pnpm --filter @gosenderr/admin-app dev",
    "dev:admin-desktop": "bash scripts/start-phase1.sh",
    "dev:admin-desktop:docker": "bash scripts/start-phase1.sh --docker",
    "stop:admin-desktop": "bash scripts/start-phase1.sh --stop",
    "build:admin": "pnpm --filter @gosenderr/admin-app build",
    "preview:admin": "pnpm --filter @gosenderr/admin-app preview",
    "deploy:admin": "pnpm build:admin && firebase deploy --only hosting:gosenderr-admin --project gosenderr-6773f --non-interactive",
    "deploy:all": "pnpm build && firebase deploy --only hosting --project gosenderr-6773f --non-interactive",
    "deploy:dev": "pnpm build && firebase deploy --project gosenderr-dev --only hosting,functions,firestore:rules --non-interactive",
    "deploy:staging": "pnpm build && firebase deploy --project gosenderr-staging --only hosting,functions,firestore:rules --non-interactive",
    "deploy:prod": "pnpm build && firebase deploy --project gosenderr-6773f --only hosting,functions,firestore:rules --non-interactive",
    "deploy:web:run": "bash scripts/deploy-cloudrun-web.sh",
    "deploy:web:hosting": "firebase deploy --only hosting:gosenderr-6773f --project gosenderr-6773f --non-interactive",
    "deploy:web": "pnpm deploy:web:run && pnpm deploy:web:hosting",
    "predeploy:functions": "node scripts/predeploy-vendor-shared.js",
    "verify:phase0": "bash scripts/verify-phase0.sh",
    "verify:docs": "bash scripts/verify-docs.sh",
    "dev:docker": "bash scripts/dev-docker-up.sh",
    "dev:docker:down": "bash scripts/dev-docker-down.sh",
    "smoke:docker": "sh ./scripts/smoke-tests.sh"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "2.0.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.1",
    "firebase-admin": "^13.6.0",
    "firebase-tools": "13.24.1",
    "node-which": "^1.0.0",
    "tsx": "^4.21.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "vite": "^7.3.1",
    "which": "^6.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "dependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.57.1"
  },
  "pnpm": {
    "overrides": {
      "@grpc/grpc-js": "1.10.9",
      "tar": "7.5.7",
      "undici": "6.23.0",
      "firebase": "12.0.0",
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "@types/react": "18.3.1",
      "@types/react-dom": "18.3.1"
    }
  }
}
